---
import { siteConfig } from "../config";
const hasCertifications =
  siteConfig.certifications && siteConfig.certifications.length > 0;
---

{
  hasCertifications && (
    <section id="certifications" class="p-8 sm:p-12 md:p-16 lg:p-24 bg-gray-50">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
              Certs
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-7">
            <div class="space-y-8">
              {siteConfig.certifications.map((cert) => {
                const Component = cert.credentialUrl ? "a" : "div";
                const linkProps = cert.credentialUrl
                  ? {
                      href: cert.credentialUrl,
                      target: "_blank",
                      rel: "noopener noreferrer",
                    }
                  : {};

                return (
                  <Component
                    {...linkProps}
                    class={`block bg-white rounded-lg shadow-sm border border-gray-100 p-4 sm:p-5 md:p-6 transition-shadow duration-300 ${
                      cert.credentialUrl ? "hover:shadow-md" : ""
                    }`}
                  >
                    <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-4">
                      <div>
                        <h3 class="text-lg sm:text-xl font-semibold text-gray-900">
                          {cert.name}
                        </h3>
                        <p
                          class="text-base sm:text-lg"
                          style={`color: ${siteConfig.accentColor}`}
                        >
                          {cert.issuer}
                        </p>
                      </div>
                      <span class="text-xs sm:text-sm text-gray-500 mt-2 sm:mt-0">
                        {cert.dateIssued}
                      </span>
                    </div>

                    {cert.skills && cert.skills.length > 0 && (
                      <div class="mb-3">
                        <div class="flex flex-wrap gap-2">
                          {cert.skills.map((skill) => (
                            <span class="px-2.5 py-1 bg-gray-100 text-gray-700 rounded-md text-xs font-medium">
                              {skill}
                            </span>
                          ))}
                        </div>
                      </div>
                    )}

                    {cert.description && (
                      <p class="text-sm text-gray-600 mb-3">
                        {cert.description}
                      </p>
                    )}

                    {cert.credentialUrl && (
                      <div class="flex items-center text-sm text-gray-600">
                        <svg
                          class="w-4 h-4 mr-2"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                          />
                        </svg>
                        <span>View Credential</span>
                      </div>
                    )}
                  </Component>
                );
              })}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
